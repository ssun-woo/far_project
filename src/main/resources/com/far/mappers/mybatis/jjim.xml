<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="JJim">

	<!-- 찜 등록 -->
 	<insert id="set_jjim">
 		insert into jjim(store_num, memId) values (#{store_num},#{memId})
 	</insert>
 	
 	<!-- 찜 여부 -->
 	<select id="get_jjim" resultType="int">
 		select count(*) from jjim where memid=#{memId} and store_num=#{store_num}
 	</select>
 	
 	<!-- 찜 삭제 -->
 	<delete id="del_jjim">
 		delete jjim where memId=#{memId} and store_num=#{store_num}
 	</delete>
 	
</mapper>
